<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".home">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">
            <com.denzcoskun.imageslider.ImageSlider
                android:id="@+id/image_slider"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                app:iss_corner_radius="20"
                app:iss_auto_cycle="true"
                app:iss_period="1000"
                android:layout_marginTop="30dp"
                app:iss_delay="2000"
                app:iss_text_align="CENTER"/>
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                app:srcCompat="@mipmap/logo_foreground"/>
            <TextView
                android:id="@+id/title_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Stay | Connect | Explore"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_marginTop="-30dp"
                android:textColor="@color/teal_200"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Your Home Away from Home"
                android:textSize="20sp"
                android:layout_marginVertical="5dp"
                android:textColor="#FFC107"
                />
            <androidx.cardview.widget.CardView
                android:id="@+id/card_view"
                android:layout_width="380dp"
                android:layout_gravity="center"
                android:layout_height="170dp"
                android:layout_margin="8dp"
                android:elevation="4dp"
                android:clickable="true">
                <!-- Card Content -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:background="@drawable/card_bg_home"
                    android:orientation="vertical">

                    <!-- Card Image -->
                    <ImageView
                        android:id="@+id/card_image"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/room_image" />

                    <!-- Card Title -->
                    <TextView
                        android:id="@+id/card_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rooms"
                        android:layout_marginLeft="5dp"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:padding="8dp" />

                    <!-- Card Description -->
                    <TextView
                        android:id="@+id/card_description"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="5dp"
                        android:textColor="#C5C2C2"
                        android:layout_height="wrap_content"
                        android:text="View and reserve Rooms"
                        android:layout_marginTop="-15dp"
                        android:padding="8dp" />

                    <!-- Other Card Content Goes Here -->

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/card_view1"
                android:layout_width="380dp"
                android:layout_gravity="center"
                android:layout_height="170dp"
                android:layout_margin="8dp"
                android:elevation="4dp"
                android:clickable="true">

                <!-- Card Content -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:background="@drawable/card_bg_home"
                    android:orientation="vertical">

                    <!-- Card Image -->
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/room_image" />

                    <!-- Card Title -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Payment"
                        android:layout_marginLeft="5dp"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:padding="8dp" />

                    <!-- Card Description -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_marginLeft="5dp"
                        android:textColor="#C5C2C2"
                        android:layout_height="wrap_content"
                        android:text="Pay and view pending payments "
                        android:layout_marginTop="-15dp"
                        android:padding="8dp" />

                    <!-- Other Card Content Goes Here -->

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
</FrameLayout>