<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FirstFirebaseProject" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="android:tint">@null</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
<!--        '<item name="windowActionBar">false</item>'-->
    </style>
    <style name="AppNavigationViewStyle" parent="Widget.Design.NavigationView">
        <item name="itemIconTint">#7AA3FF</item>
    </style>
    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@drawable/custom_bg</item> <!-- Replace with your desired background color -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColor">#D50B0B</item>
    </style>
    <style name="AlertDialogText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item> <!-- Replace with your desired text color -->
    </style>
    <style name="abb_tabColor" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#7AA3FF</item> <!-- Replace with your desired text color -->
    </style>
    <style name="CustomText">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#7AA3FF</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>